<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="searchStyle" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:hint">"جستجو"</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableRight">@drawable/ic_search</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="itesmStyle" parent="android:Theme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">#ff9999</item>
        <item name="android:drawableStart">@drawable/ic_stove</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="deleteItems" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/ic_trash</item>
    </style>

    <style name="image" parent="android:Theme">
        <item name="android:background">@drawable/frame</item>
        <item name="android:drawableTop">@drawable/tomato</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>