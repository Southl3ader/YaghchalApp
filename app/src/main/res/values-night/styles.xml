<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="searchStyle" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:hint">"Search"</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="deleteItems" parent="android:Theme">
        <item name="android:text">"حذف"</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableLeft">@drawable/ic_trash</item>
    </style>

</resources>